<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="35">

                <RelativeLayout
                    android:id="@+id/PG_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <com.example.hmessenger.PlayBoardHead
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/PG_body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23">

                        <view class="com.example.hmessenger.PlayBoardView"
                            android:id="@+id/view_playground"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@color/white"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/PG_footer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="35">

                <!--CONTROL LAYER HEADER-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">
                </RelativeLayout>

                <!--CONTROL LAYER BODY-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:background="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@android:color/transparent">

                                <ImageButton
                                    android:id="@+id/btn_left_move"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"/>

                                <ImageButton
                                    android:id="@+id/btn_right_move"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"/>

                        </LinearLayout>

                </LinearLayout>

                <!--CONTROL LAYER FOOTER-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:orientation="horizontal"
                    android:background="@color/white">

                        <ImageButton
                            android:id="@+id/btn_drop"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/control_button_no_press"/>

                        <ImageButton
                            android:id="@+id/btn_rotate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/control_button_no_press"/>

                </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>