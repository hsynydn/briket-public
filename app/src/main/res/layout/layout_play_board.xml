<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="35">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/PG_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/bungee"
                            android:text="SCORE"
                            android:textColor="#B20040"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:id="@+id/PG_body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23">

                        <view class="com.example.hmessenger.PlayBoardView"
                            android:id="@+id/view_playground"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@color/white"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/PG_footer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="35">

                <!--CONTROL LAYER HEADER-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                </RelativeLayout>

                <!--CONTROL LAYER BODY-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:background="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@android:color/transparent">

                                <ImageButton
                                    android:id="@+id/btn_left_move"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"/>

                                <ImageButton
                                    android:id="@+id/btn_right_move"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"/>

                        </LinearLayout>

                </LinearLayout>

                <!--CONTROL LAYER FOOTER-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:orientation="horizontal"
                    android:background="@color/white">

                        <ImageButton
                            android:id="@+id/btn_rotate"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"
                            android:layout_weight="0.4"
                            android:background="@drawable/control_button_no_press"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/btn_drop"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_weight="0.4"
                            android:background="@drawable/control_button_no_press"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/btn_pause"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="32dp"
                            android:layout_weight="0.2"
                            android:background="@drawable/control_button_no_press"
                            app:layout_constraintEnd_toStartOf="@+id/btn_rotate"
                            app:layout_constraintStart_toEndOf="@+id/btn_drop"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>