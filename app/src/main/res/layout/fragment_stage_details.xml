<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout_stage_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD000000"
    android:backgroundTintMode="src_in"
    android:clickable="true"
    tools:context=".activity.FragmentStageDetails">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/sd_button_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_map_iv_logo">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/fragment_stage_details_objective_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:background="#3F51B5"
                android:gravity="center"
                android:padding="20dp"
                android:text="Destroy 20 Lines"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/pattern_location_row_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/pattern_location_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

            <ImageView
                android:id="@+id/pattern_location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

            <ImageView
                android:id="@+id/pattern_location_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />
        </TableRow>

        <TableRow
            android:id="@+id/pattern_location_row_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/pattern_location_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

            <ImageView
                android:id="@+id/pattern_location_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

            <ImageView
                android:id="@+id/pattern_location_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

        </TableRow>

        <TableRow
            android:id="@+id/pattern_location_row_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/pattern_location_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

            <ImageView
                android:id="@+id/pattern_location_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

            <ImageView
                android:id="@+id/pattern_location_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pattern_location_empty" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/game_map_iv_logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <ImageButton
        android:id="@+id/sd_button_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/stage_details_cancel_unpressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/sd_button_ok"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/stage_details_play_unpressed"
        app:layout_constraintBottom_toTopOf="@+id/sd_button_back"
        app:layout_constraintEnd_toEndOf="@+id/sd_button_back"
        app:layout_constraintStart_toStartOf="@+id/sd_button_back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sd_button_back"
        app:layout_constraintEnd_toEndOf="@+id/sd_button_back"
        app:layout_constraintStart_toStartOf="@+id/sd_button_back"
        app:layout_constraintTop_toTopOf="@+id/sd_button_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sd_button_ok"
        app:layout_constraintEnd_toEndOf="@+id/sd_button_ok"
        app:layout_constraintStart_toStartOf="@+id/sd_button_ok"
        app:layout_constraintTop_toTopOf="@+id/sd_button_ok" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="197dp" />

</androidx.constraintlayout.widget.ConstraintLayout>