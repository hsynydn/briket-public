<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout_stage_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC2B2222"
    android:backgroundTintMode="src_atop"
    android:clickable="true"
    tools:context=".activity.FragmentStageDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_stage_details_background_layout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@mipmap/stage_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destroy 30 Lines"
                android:textColor="#4C4343"
                android:textSize="48sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/sd_button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/quit_button_pressed"
        app:layout_constraintBottom_toTopOf="@+id/fragment_stage_details_background_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_stage_details_background_layout" />

    <ImageButton
        android:id="@+id/sd_button_ok"
        android:layout_width="150dp"
        android:layout_height="147dp"
        android:background="@drawable/play_button_pressed"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_stage_details_background_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_stage_details_background_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>