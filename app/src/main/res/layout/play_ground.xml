<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <!-- Score Board -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Score: 0000"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:textSize="24dp"
                android:fontFamily="@font/ubuntu" />

            <!-- Score Board -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Hi-Score: 0000"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:textSize="24dp"
                android:fontFamily="@font/ubuntu" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu"
                    android:text="Pause"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        android:layout_weight="7"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="8">

            <!-- Play Ground -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/shape"
                android:orientation="vertical">

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_0" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_1" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_2" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_3" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_4" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_5" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_6" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_7" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_8" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_9" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_10" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_11" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_12" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_13" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_14" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_15" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_16" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_17" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_18" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_19" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_20" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_21" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_22" />

                <include android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.312" layout="@layout/layout_play_ground_raw_23" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right Help Panel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"></LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="2"
        android:weightSum="8"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btn_left_move"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Left"
            android:background="@android:color/transparent"
            android:src="@drawable/left"/>

        <ImageButton
            android:id="@+id/btn_drop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Down"
            android:background="@android:color/transparent"
            android:src="@drawable/down"/>

        <ImageButton
            android:id="@+id/btn_rotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Rotate"
            android:background="@android:color/transparent"
            android:src="@drawable/rotate"/>

        <ImageButton
            android:id="@+id/btn_right_move"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Right"
            android:background="@android:color/transparent"
            android:src="@drawable/right"/>

    </LinearLayout>

</LinearLayout>