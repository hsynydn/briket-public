<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_pause_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA662D91"
    android:backgroundTint="#AA662D91">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="35">

        <!--CONTROL LAYER HEADER-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

        </RelativeLayout>

        <!--CONTROL LAYER BODY-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:id="@+id/fragment_pause_restart_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_on_pause_button"
                android:text="Restart"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fragment_pause_preferences_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/ic_on_pause_button"
                android:text="Preferences"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/fragment_pause_restart_button"
                app:layout_constraintStart_toStartOf="@+id/fragment_pause_restart_button"
                app:layout_constraintTop_toBottomOf="@+id/fragment_pause_restart_button" />

            <Button
                android:id="@+id/fragment_pause_menu_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/ic_on_pause_button"
                android:text="Menu"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/fragment_pause_preferences_button"
                app:layout_constraintStart_toStartOf="@+id/fragment_pause_preferences_button"
                app:layout_constraintTop_toBottomOf="@+id/fragment_pause_preferences_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--CONTROL LAYER FOOTER-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fragment_pause_back_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/quit_button_pressed"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>